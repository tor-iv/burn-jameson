# ============================================
# BURN THAT AD - Environment Variables
# ============================================

# ============================================
# SUPABASE (Database & Storage)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# ============================================
# GOOGLE CLOUD APIs
# ============================================
# Google Vision API - for bottle detection & receipt OCR
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here

# Gemini API - for bottle morph animation (optional)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# PAYPAL PAYOUTS API
# ============================================
# Get credentials from: https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENVIRONMENT=sandbox  # Use 'sandbox' for testing, 'live' for production

# ============================================
# ADMIN DASHBOARD AUTHENTICATION
# ============================================
# ⚠️ SECURITY: Use bcrypt hash, not plaintext password
# Generate hash: node -e "console.log(require('bcrypt').hashSync('your_password', 10))"
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# JWT secret for admin session tokens (generate random 256-bit secret)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_JWT_SECRET=your_random_secret_here_64_characters_long

# ❌ NEVER USE THIS - SECURITY VULNERABILITY:
# NEXT_PUBLIC_ADMIN_PASSWORD=... (exposes password to browser!)

# ============================================
# AUTOMATED APPROVAL SYSTEM
# ============================================
# Enable/disable automated receipt approval (default: true)
ENABLE_AUTO_APPROVAL=true

# Minimum confidence score for auto-approval (0-1, default: 0.85 = 85%)
AUTO_APPROVAL_CONFIDENCE_MIN=0.85

# Maximum auto-approvals per day (safety limit, default: 1000)
AUTO_APPROVAL_MAX_DAILY=1000

# ============================================
# FRAUD PREVENTION SETTINGS
# ============================================

# Receipt Image Duplicate Detection
# Set to 'false' to disable receipt hash checking during testing
# ALWAYS set to 'true' in production
# ⚠️ SECURITY: Server-side only (removed NEXT_PUBLIC_ to prevent client bypass)
ENABLE_RECEIPT_HASH_CHECK=true

# PayPal Email Rate Limiting
# Set to 'false' to disable email rate limiting during testing
# ALWAYS set to 'true' in production
ENABLE_PAYPAL_EMAIL_RATE_LIMIT=true

# PayPal Email Rate Limit Period (in days, default: 30)
PAYPAL_EMAIL_RATE_LIMIT_DAYS=30

# ============================================
# DEBUG/TEST MODE
# ============================================
# Set to 'true' in production to disable test mode features
NEXT_PUBLIC_DISABLE_TEST_MODE=false
