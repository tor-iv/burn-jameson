# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Cloud Vision API
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Gemini API (for bottle morphing animation)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# PayPal Payouts API
# Get these from: https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox  # Use 'sandbox' for testing, 'live' for production

# PayPal Testing - Override Payout Amount
# Set this to test with minimal cost (e.g., 0.01 for penny tests)
# Leave unset to use production default ($5.00)
# Sandbox testing is FREE - only needed for live testing
# Example: TEST_PAYOUT_AMOUNT=0.01 (costs $0.02 per test with fees)
# TEST_PAYOUT_AMOUNT=0.01

# Admin Dashboard
# Server-side admin password (NOT exposed to browser!)
ADMIN_PASSWORD=your_secure_password_here

# Legacy (deprecated - use ADMIN_PASSWORD instead)
# NEXT_PUBLIC_ADMIN_PASSWORD=your_secure_password_here

# Fraud Prevention Settings
# Receipt Image Duplicate Detection
# Set to 'false' to disable receipt hash checking during testing
# Default: enabled (true)
NEXT_PUBLIC_ENABLE_RECEIPT_HASH_CHECK=true

# PayPal Email Rate Limiting
# Set to 'false' to disable email rate limiting during testing
# Default: enabled (true)
ENABLE_PAYPAL_EMAIL_RATE_LIMIT=true

# PayPal Email Rate Limit Period (in days)
# How many days must pass before the same PayPal email can receive another payout
# Default: 30 days
PAYPAL_EMAIL_RATE_LIMIT_DAYS=30

# Production Settings
# Disable test mode features in production (e.g., test receipt creation, bypass bottle detection)
# Set to 'true' in production to disable all test mode features
# Default: false (test mode enabled for development)
NEXT_PUBLIC_DISABLE_TEST_MODE=false
